{# Titulek #}
{% block title %}
    Kategorie
{% endblock %}
{# Obsah #}
{% block contenido %}

    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Kategorie</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">
                <img class="img-responsive" src="{{asset(tapaImg~category.foto)}}" alt="">
